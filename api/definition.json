{
  "swagger": "2.0",
  "info": {
    "title": "API Documentation",
    "version": "1.0.0",
    "description": "API Documentation using Swagger"
  },
  "host": "localhost:3000",
  "basePath": "/api",
  "schemes": ["http", "https"],
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header"
    }
  },
  "definitions": {
    "Files": {
      "type": "object",
      "properties": {
        "files": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "DataLine": {
      "type": "object",
      "properties": {
        "text": {
          "type": "string"
        },
        "number": {
          "type": "integer",
          "format": "int64"
        },
        "hex": {
          "type": "string"
        }
      }
    },
    "Data": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "file": {
            "type": "string"
          },
          "lines": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/DataLine"
            }
          }
        }
      }
    }
  },
  "parameters": {
    "AuthorizationHeader": {
      "name": "Authorization",
      "in": "header",
      "description": "Bearer token for authentication",
      "required": true,
      "type": "string"
    }
  },
  "paths": {
    "/files/list": {
      "get": {
        "summary": "Get files list",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "$ref": "#/definitions/Files"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/files/data": {
      "get": {
        "summary": "Get files data",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Successfully",
            "schema": {
              "$ref": "#/definitions/Data"
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  }
}
